{
        "name": "Privately Search Selected",
        "description": "Adds menu item to privately search selected text.",
        "version": "0.1",
        "author": "Marco Lucidi",

        "manifest_version": 2,
        "browser_specific_settings": {
                "gecko": {
                        "id": "privately-search-selected@example.com",
                        "strict_min_version": "60.0"
                }
        },

        "background": {
                "scripts": [
                        "background.js"
                ]
        },

        "permissions": [
                "menus"
        ],

        "icons": {
                "32": "icons/private-32.png"
        }
}
